<div class="container">
        <div class="row">
            <!-- to do -->
            <div class="col-sm-3">    
                    <div class="card bg-light mb-3" style="width: 17rem;">
                            <div class="card-body">
                                <h5 class="card-title">Day 1: Chest and Triceps</h5>
                                  <ul>
                                  {{#each mscl}}
                                    {{#if_eq day 1}}
                                  <p> - {{ex_name}}  {{intervals}} </p>
                                    {{/if_eq}}
                                  {{/each}}
                                  </ul>                       
                            </div>
                    </div>                       
            </div>
            <div class="col-sm-3">    
                    <div class="card bg-light mb-3" style="width: 17rem;">
                            <div class="card-body">
                                <h5 class="card-title">Day 2: Legs and Abs</h5>
                                  <ul>
                                  {{#each mscl}}
                                    {{#if_eq day 2}}
                                  <p> - {{ex_name}}  {{intervals}} </p>
                                    {{/if_eq}}
                                  {{/each}}
                                  </ul>                          
                            </div>
                    </div>                       
            </div>
          <div class="col-sm-3">    
                    <div class="card bg-light mb-3" style="width: 17rem;">
                            <div class="card-body">
                                <h5 class="card-title">Day 3: Shoulders and Traps</h5>
                                  <ul>
                                  {{#each mscl}}
                                    {{#if_eq day 3}}
                                  <p> - {{ex_name}}  {{intervals}} </p>
                                    {{/if_eq}}
                                  {{/each}}
                                  </ul>         
                            </div>
                    </div>                       
            </div>
            <div class="col-sm-3">    
                    <div class="card bg-light mb-3" style="width: 17rem;">
                            <div class="card-body">
                                <h5 class="card-title">Day 4: Back, Biceps, and Abs</h5>
                                  <ul>
                                  {{#each mscl}}
                                    {{#if_eq day 4}}
                                  <p> - {{ex_name}}  {{intervals}} </p>
                                    {{/if_eq}}
                                  {{/each}}
                                  </ul>
                            </div>
                    </div>                       
            </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="card bg-light mb-3" style="width: 71rem;">
              <div class="card-body" id="New">
                <h2 class="card-title">Insert Your Own Exercise!</h2>
                <form action="muscle_buildingCreate" method="POST">
                <div class="form-group">
                  <label for="formGroupExampleInput">Exercise Name</label>
                  <input type="text" class="form-control" name="ex_name" placeholder="Bench Press">
                </div>
                <div class="form-group">
                  <label for="formGroupExampleInput2">Sets/Reps</label>
                  <input type="text" class="form-control" name="intervals" placeholder="3x10">
                </div>
                <div class="form-group">
                  <label for="formGroupExampleInput2">Day</label>
                  <select class="custom-select" name="day">
                    <option selected>Open to select day of workout</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                  </select>
                  <br>
                  <button type="submit">Add Exercise</button>
                </div>
                </form>
              </div>
            </div>
            <br><br>
          </div>
        </div>
        <iframe src="https://open.spotify.com/embed/user/12168588908/playlist/4YvhNsxfaBVBOHuBybdS1A" width="1150" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
